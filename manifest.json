{
    "manifest_version": 3,
    "name": "Hide Agency Ads",
    "version": "1.0",
    "description": "Hides Agency ads in the Car buying section.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": ["activeTab", "storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://www.yad2.co.il/*"],
            "js": ["content.js"]
        }
    ]
}